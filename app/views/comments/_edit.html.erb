<% provide :button_text, t("views.admin.category.edit.button") %>
<% if @comment.rating > 0 %>
  <%= form_for [@product, @comment] do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <div id="edit-rating-form" data-score="<%= @product.rate_score %>">
    </div>
    <br>
    <%= f.text_area :content, class: "form-control" %>
    <br>
    <%= f.submit yield: :button_text, class: "btn btn-primary" %>
  <% end %>

<% else %>
  <%= render "comments/form_for_exist_comment" %>
<% end %>
