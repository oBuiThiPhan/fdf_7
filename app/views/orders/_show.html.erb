<table class="table table-hover">
  <thead>
    <tr class="info">
      <th><%= t "stt" %></th>
      <th><%= t "products.name" %></th>
      <th><%= t "products.quantity" %></th>
      <th><%= t "products.price" %></th>
    </tr>
  </thead>
  <tbody>
    <% order_details.each_with_index do |line_item, index| %>
      <tr>
        <% unless line_item.blank? %>
          <td><%= index + 1 %></td>
          <td><%= line_item.product_name %></td>
          <td><%= line_item.each_quantity %></td>
          <td><%= line_item.each_total_price %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<h3><%= t "orders.show.totalprice" %><%= order.total_price %> $</h3>
<h4><%= link_to t("back"), :back %></h4>
