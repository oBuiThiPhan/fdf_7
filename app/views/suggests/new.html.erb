<center><h3><%= t "views.suggests.new.title" %></h3></center>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @suggest, html: {multipart: true} do |f| %>
      <%= render partial: "shared/error_messages", locals: {object: @suggest} %>
      <%= f.hidden_field :user_id, value: current_user.id %>

      <%= f.label :classify %>
      <%= f.select :category_id,
        options_for_select(@categories.collect {|c| [c.title, c.id]}), {},
        {class: "form-control"} %>
      <br>

      <%= f.label :content %>:
      <%= f.text_area :content, class: "form-control" %>
      <br>

      <%= f.label t("views.suggests.new.picturesuggest") %>
      <br/>
      <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png",
        class: "form-control" %>
      <br>
      <%= f.submit t("views.suggests.new.createbutton"), class: "btn btn-primary" %>
      <br>
    <% end %>
  </div>
</div>
