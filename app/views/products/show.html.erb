<div class="row">
  <div class="col-md-4 gallery not-scroll">
    <%= image_tag @product.image.url, size: Settings.product.show.size,
      class: "thumbnail zoom" %>
  </div>
  <div class="col-md-8 show-product">
    <h2>
      <strong><%= @product.name %> - <%= @product.category.title %></strong>
    </h2>
    <%= social_share_button_tag(@product.name, url: @product) %>
    <h4><%= @product.description %></h4>
    <h3>
      <div class="average-comment-rating" data-score="<%= @product.rate_score %>"></div>
    </h3>
    <h3><%= @product.price %> $</h3>
    <h4><%= t ".quantity" %><%= @product.quantity %></h4>
    <h3>
      <% if @product.quantity > 0 %>
        <%= link_to t("products.addtocart"), "/cart/#{@product.id}",
          method: :post, class: "btn btn-primary" %>
      <% else %>
        <span class="btn btn-danger"><%= t "products.hethang" %> </span>
      <% end %>
    </h3>
    <br/>
    <br/>
    <section id="comments-section">
      <div class="comment-stats">
    <span class="glyphicon glyphicon-comment"></span>
    <strong><%= t"comments" %></strong>
    <strong id="count-comments">(<%= @comments.count %>)</strong>
  </div>

  <% if user_signed_in? %>
    <div id="new-comment">
      <%= image_tag current_user.avatar.url, 
        size: Settings.product.comment.avatar_size %>
      <span class="user-name"><%= current_user.name %></span>
      <%= form_for [@product, @comment] do |f| %>
        <%= f.label :rating %>
        <div id="rating-form">
        </div>
        <div class="form-group content">
          <%= f.text_area :content, placeholder: t("comment_invite") %>
        </div>
        <%= f.submit t("comment_button"), class: "btn btn-primary",
          id: "create-new-comment" %>
      <% end %>
    </div>
  <% else %>
    <div id="login-invite">
      <%= link_to t(".login_to_comment"), new_user_session_path %>
    </div>
  <% end %>

  <ol id="comments">
    <%= render @comments %>
  </ol>
</section>
  </div>
</div>
