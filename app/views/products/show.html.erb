<div class="row">
  <div class="col-md-4 gallery"">
    <%= image_tag @product.image.url, size: Settings.product.show.size,
      class: "thumbnail zoom"%>
  </div>
  <div class="col-md-8">
    <h2>
      <strong><%= @product.name %> - <%= @product.category.title %></strong>
    </h2>
    <%= social_share_button_tag(@product.name) %>
    <h4><%= @product.description %></h4>
    <h3>
      <div id="rate-score">
        <%= @product.rate_score %>
      </div>
    </h3>
    <h3><%= @product.price %> $</h3>
    <h4><%= t ".quantity" %><%= @product.quantity %></h4>
    <%= link_to t("products.addtocart"), "/cart/#{@product.id}" %>
    </button>

    <% if can? :create, Comment %>
      <div id="comment">
        <%= link_to t("views.products.show.createcomment"),
          new_product_comment_path(@product), remote: true %>
      </div>
      <div id="new-comment"></div>
    <% end %>
    <% if can? :read, Comment %>
      <div id="show-comment">
        <%= render @comments %>
        <%= will_paginate @comments %>
      </div>
    <% end %>
  </div>
</div>
