<div class="row">
  <h3 class="col-md-8"><%= t "user.h4" %></h3>
  <br/>
  <div class="panel col-md-3">
    <%= search_form_for [:admin, @search] do |f| %>
      <table class="table-padding">
        <tr>
          <td><%= f.text_field :name_cont, class: "form-control",
            placeholder: t("searchname") %></td>
          <td rowspan="2">
            <%= f.submit t("products.search"), class: "btn btn-info" %>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>
<table class="table table-hover">
  <thead>
    <tr class="info">
      <th><%= t "stt" %></th>
      <th><%= t "user.name" %></th>
      <th><%= t "user.email" %></th>
      <th><%= t "user.address" %></th>
      <th><%= t "user.phone" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= paginate @users %>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td> <%= index + 1 %> </td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.phone_number %></td>
        <td>
          <% if user.member? %>
            <%= link_to admin_user_path(user),
              method: :delete, data: {confirm: t("admin.messages")} do %>
               <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
