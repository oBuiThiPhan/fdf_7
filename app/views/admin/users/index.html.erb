<h4><strong><%= t "user.h4" %></strong></h4>
<table class="table table-hover">
  <thead>
    <tr class="info">
      <th><%= t "stt" %></th>
      <th><%= t "user.name" %></th>
      <th><%= t "user.email" %></th>
      <th><%= t "user.address" %></th>
      <th><%= t "user.phone" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= paginate @users %>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td> <%= index + 1 %> </td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.phone_number %></td>
        <td>
          <% if user.member? %>
            <%= link_to admin_user_path(user),
              method: :delete, data: {confirm: t("admin.messages")} do %>
               <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
