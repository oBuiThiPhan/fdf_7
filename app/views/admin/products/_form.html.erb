<%= form_for [:admin, @product], html: {multipart: true} do |f| %>
  <%= render partial: "shared/error_messages", locals: {object: @product} %>

  <%= f.label :category %>
  <%= f.grouped_collection_select :category_id,
    Category.parent_category.order(:title), :children, :title, :id, :title,
    {}, {class: "form-control"} %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_field :description, rows: 2, class: "form-control" %>

  <%= f.label :price %>
  <%= f.number_field :price, step: "0.1", class: "form-control" %>

  <%= f.label :quantity %>
  <%= f.number_field :quantity, class: "form-control" %>

  <%= f.label :image %>
  <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png",
    class: "form-control" %>
  <br>
  <%= f.submit yield: :button_text, class: "btn btn-primary" %>
<% end %>
